# Puerto del servidor (Railway lo asigna automáticamente)
PORT=3000

# URL de conexión a PostgreSQL (Railway la inyecta automáticamente)
# Formato: postgresql://usuario:password@host:puerto/database
DATABASE_URL=postgresql://localhost:5432/wajero

# Ruta del volumen para archivos (Railway la configura automáticamente)
# En Railway será: /app/uploads
RAILWAY_VOLUME_MOUNT_PATH=/app/uploads

# Entorno de ejecución
NODE_ENV=development
